<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Pocket" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/theme_main_deep_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/gray_100</item>
    </style>

    <!--    <style name="Theme.Pocket.TopBar" parent="Widget.MaterialComponents.Toolbar">-->
    <style name="Theme.Pocket.TopBar" parent="">
        <item name="android:background">@color/theme_main_deep_dark</item>
    </style>

<!--    布局背景-->
    <style name="Theme.Pocket.View" parent="">
        <item name="android:background">@color/theme_main_deep_dark</item>
    </style>
    <!--    输入框主题-->
    <style name="Theme.Pocket.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_stroke</item>
        <item name="hintTextColor">@color/text_input_stroke</item>
    </style>

    <!--AccountCard-->
    <style name="Theme.Pocket.AccountCard" parent="">
        <item name="android:background">@color/gray</item>
    </style>
    <!--Chip-->
    <style name="Theme.Pocket.Chip" parent="">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--字体主题-->
    <style name="Theme.Pocket.Font.Primary" parent="">
        <item name="android:textColor" >@color/font_color_primary</item>
    </style>

    <style name="Theme.Pocket.Font.Second" parent="">
        <item name="android:textColor">@color/font_color_second</item>
    </style>

    <style name="Theme.Pocket.NoActionBar" parent="Theme.Pocket">
        <item name="android:statusBarColor">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Pocket.FingerPrintButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item>
    </style>

    <style name="Theme.Pocket.FingerPrintLayout" parent="">
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/theme_main_deep_dark</item>
        <item name="android:background">@color/theme_main_deep_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Theme.Pocket.PageTitle" parent="">
        <item name="android:textSize">@dimen/font_size_bigger</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/font_size_bigger</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="colorPrimary">@color/black</item>
    </style>
</resources>